<div class="row">
  <div class="col-md-6">
    <form class='form'>
      <div class="form-group">
        <label for="post_title">Title</label>
        <input type="text" class="form-control" name="post[title]" id="post_title" v-model='title'>
      </div>
      <div class="form-group">
        <label for="post_content">Content</label>
        <textarea name="post[content]" rows=10 class="form-control" id="post_content" v-model='content' debounce="300"></textarea>
      </div>
      <input type="submit" name="commit" value="Create Post" v-on='click: submit' class='btn btn-default'>
    </form>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{title}}</h3>
      </div>
      <div class="panel-body">
        <div v-html="content | tomarked"></div>
      </div>
    </div>
  </div>
</div>
